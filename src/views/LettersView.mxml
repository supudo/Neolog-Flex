<?xml version="1.0" encoding="utf-8"?>
<s:View xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark"
		title="Letters"
		actionBarVisible="false"
		creationComplete="letters_creationCompleteHandler(event)"
		viewActivate="letters_viewActivateHandler(event)">
	
	<s:layout>
		<s:VerticalLayout gap="0"/>
	</s:layout>
	
	<fx:Metadata>
		[ResourceBundle("resources")]
	</fx:Metadata> 
	
	<fx:Script>
		<![CDATA[
			import models.LetterModel;
			
			import mx.collections.ArrayCollection;
			import mx.events.FlexEvent;
			
			import spark.events.IndexChangeEvent;
			import spark.events.ViewNavigatorEvent;
			
			import utilities.AppSettings;
			
			[Bindable]
			private var letterModel:LetterModel;
			
			protected function letters_creationCompleteHandler(event:FlexEvent):void {
				this.title = resourceManager.getString('resources','menu_Letters');
			}
			
			protected function letters_viewActivateHandler(event:ViewNavigatorEvent):void {
				this.loadItems(null);
			}
			
			public function loadItems(event:Event):void {
				this.letterModel = LetterModel.getInstance();
				if (this.letterModel.items == null) {
					this.letterModel.items = new ArrayCollection();
					for (var i:int=0; i<AppSettings.getInstance().Letters.length; i++)
						this.letterModel.items.addItem({letter: AppSettings.getInstance().Letters[i]});
				}
			}
			
			protected function listLetters_changeHandler(event:IndexChangeEvent):void {
				AppSettings.getInstance().CurrentLetter = this.listLetters.selectedItem.letter;
			}
			
		]]>
	</fx:Script>
	
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	
	<s:List id="listLetters" width="100%" height="100%" dataProvider="{letterModel.items}"
			alternatingItemColors="[0xE3E3E3, 0xEBEBEC]"
			change="listLetters_changeHandler(event)" labelField="letter" textAlign="center">
	</s:List>
	
</s:View>
